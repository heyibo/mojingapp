<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:id="@+id/ll_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical">
                <RadioButton
                    android:id="@+id/rb_ruma"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:button="@null"
                    android:textSize="16sp"
                    android:checked="true"
                    android:textColor="@color/title_textcolor"
                    android:gravity="center_vertical"
                    android:drawableRight="@drawable/jubao_is_sel"
                    android:text="辱骂"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/title_line"/>
                <RadioButton
                    android:id="@+id/rb_seqingsaorao"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:button="@null"
                    android:textSize="16sp"
                    android:textColor="@color/title_textcolor"
                    android:gravity="center_vertical"
                    android:drawableRight="@drawable/jubao_is_sel"
                    android:text="色情骚扰"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/title_line"/>
                <RadioButton
                    android:id="@+id/rb_guanggao"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:button="@null"
                    android:textSize="16sp"
                    android:textColor="@color/title_textcolor"
                    android:gravity="center_vertical"
                    android:drawableRight="@drawable/jubao_is_sel"
                    android:text="广告"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/title_line"/>
                <RadioButton
                    android:id="@+id/rb_qita"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:button="@null"
                    android:textSize="16sp"
                    android:textColor="@color/title_textcolor"
                    android:gravity="center_vertical"
                    android:drawableRight="@drawable/jubao_is_sel"
                    android:text="其它违规"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/title_line"/>
                <RadioButton
                    android:id="@+id/rb_qizha"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:button="@null"
                    android:textSize="16sp"
                    android:textColor="@color/title_textcolor"
                    android:gravity="center_vertical"
                    android:drawableRight="@drawable/jubao_is_sel"
                    android:text="欺诈"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/title_line"/>
                <RadioButton
                    android:id="@+id/rb_weifa"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:button="@null"
                    android:textSize="16sp"
                    android:textColor="@color/title_textcolor"
                    android:gravity="center_vertical"
                    android:drawableRight="@drawable/jubao_is_sel"
                    android:text="违法行为（赌博，反动等）"/>
            </RadioGroup>
            <View
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:background="@color/color_fa"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/color_8F8F8F"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="18dp"
                    android:text="请上传您与该客户的聊天记录截图作为调查依据"/>
                <ImageView
                    android:id="@+id/iv_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/paizhao"
                    android:layout_margin="15dp"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    <TextView
        android:id="@+id/tv_jubao"
        android:layout_width="87.5dp"
        android:layout_height="35.5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textColor="@color/color_white"
        android:textSize="13sp"
        android:gravity="center"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="26dp"
        android:background="@drawable/goumai_bg"
        android:text="举报"/>
</RelativeLayout>
