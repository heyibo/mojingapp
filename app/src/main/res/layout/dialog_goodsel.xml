<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#55000000"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="27.5dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/baiseyuanjiao"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/rl_mygoods"
                android:layout_width="match_parent"
                android:layout_height="58dp">
                <CheckedTextView
                    android:id="@+id/ctv_mygoods"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textSize="16sp"
                    android:textColor="@color/tab_check_color"
                    android:text="我的物品"/>
                <ImageView
                    android:id="@+id/iv_mygoods"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/duigou"
                    android:visibility="invisible"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="32dp"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/color_E4E4E8"/>
            <RelativeLayout
                android:id="@+id/rl_newgoods"
                android:layout_width="match_parent"
                android:layout_height="58dp">
                <CheckedTextView
                    android:id="@+id/ctv_newgoods"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textSize="16sp"
                    android:textColor="@color/tab_check_color"
                    android:text="最新商品"/>
                <ImageView
                    android:id="@+id/iv_newgoods"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/duigou"
                    android:layout_alignParentRight="true"
                    android:visibility="invisible"
                    android:layout_marginRight="32dp"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/color_E4E4E8"/>
            <RelativeLayout
                android:id="@+id/rl_ditogao"
                android:layout_width="match_parent"
                android:layout_height="58dp">
                <CheckedTextView
                    android:id="@+id/ctv_ditogao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textSize="16sp"
                    android:textColor="@color/tab_check_color"
                    android:text="价格低到高"/>
                <ImageView
                    android:id="@+id/iv_ditogao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/duigou"
                    android:visibility="invisible"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="32dp"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/color_E4E4E8"/>
            <RelativeLayout
                android:id="@+id/rl_gaotodi"
                android:layout_width="match_parent"
                android:layout_height="58dp">
                <CheckedTextView
                    android:id="@+id/ctv_gaotodi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textSize="16sp"
                    android:textColor="@color/tab_check_color"
                    android:text="价格高到低"/>
                <ImageView
                    android:id="@+id/iv_gaotodi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/duigou"
                    android:visibility="invisible"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="32dp"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_quxiao"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="16sp"
            android:gravity="center"
            android:background="@drawable/baiseyuanjiao"
            android:textColor="@color/title_textcolor"
            android:layout_marginTop="16.5dp"
            android:text="取消"/>
    </LinearLayout>
</RelativeLayout>