            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_below="@+id/tv_jinbiyue"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/ll_jinbinum1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/goumaijinbi_sel"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/jinbi"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:textColor="@color/color_161616"
                        android:textStyle="bold"
                        android:layout_marginLeft="8dp"
                        android:text="5200"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/color_A7B2B2"
                    android:text="￥6"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_jinbinum2"
                android:layout_width="0dp"
