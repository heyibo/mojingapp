<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="184dp"
        android:layout_marginLeft="31dp"
        android:layout_marginRight="31dp"
        android:background="@drawable/dialog_lahei_bg"
        android:layout_centerInParent="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:gravity="center"
            android:layout_marginTop="28dp"
            android:textSize="19sp"
            android:textColor="@color/title_textcolor"
            android:text="拉黑对方，你将不再收到 对方信息"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:layout_marginBottom="34dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_laheiqueding"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="14sp"
                android:background="@drawable/lahei_qudingbg"
                android:textColor="@color/color_66D0CE"
                android:gravity="center"
                android:text="确定"/>
            <TextView
                android:id="@+id/tv_laheiquxiao"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginLeft="31dp"
                android:textColor="@color/color_white"
                android:background="@drawable/goumai_bg"
                android:gravity="center"
                android:text="取消"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>